<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- Dynamic Effect editor loader -->
    <script name="LoaderDefense" file="editors/loader/loader_defense.lua" />
    <!-- individual effect editors -->
    <includefile source="editors/effect/AC.xml" />
    <includefile source="editors/effect/CMD.xml" />
    <includefile source="editors/effect/SAVE.xml" />
    <!-- combat effects bundle editor -->
    <windowclass name="editor_defense">
        <script file="editors/scripts/subwindow_editor.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />

            <cycler_effect_subwindow>
                <anchored width="200" />
                <parameters>
                    <dynamicinitlist>defenseEditors</dynamicinitlist>
                </parameters>
            </cycler_effect_subwindow>

            <subwindow_effect_editor />
        </sheetdata>
    </windowclass>
</root>
