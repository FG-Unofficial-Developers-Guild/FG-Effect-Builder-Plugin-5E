<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- Dynamic Effect editor loader -->
    <script name="LoaderAdvantage" file="editors/loader/loader_advantage.lua" />
    <!-- individual effect editors -->
    <includefile source="editors/effect/ADVINIT.xml" />
    <includefile source="editors/effect/ADVATK.xml" />
    <includefile source="editors/effect/ADVSAV.xml" />
    <includefile source="editors/effect/ADVCHK.xml" />
    <includefile source="editors/effect/ADVSKILL.xml" />
    <includefile source="editors/effect/ADVDEATH.xml" />
    <!-- advantage effects bundle editor -->
    <windowclass name="editor_advantage">
        <script file="editors/scripts/subwindow_editor.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />

            <cycler_effect_subwindow>
                <parameters>
                    <dynamicinitlist>advantageEditors</dynamicinitlist>
                </parameters>
            </cycler_effect_subwindow>

            <cycler_advantage />

            <subwindow_effect_editor />
        </sheetdata>
    </windowclass>
</root>
