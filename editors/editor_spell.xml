<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- Dynamic Effect editor loader -->
    <script name="LoaderSpell" file="editors/loader/loader_spell.lua" />
    <!-- individual effect editors -->
    <includefile source="editors/effect/CLC.xml" />
    <includefile source="editors/effect/DMGS.xml" />
    <includefile source="editors/effect/DMGSTYPE.xml" />
    <windowclass name="editor_spell">
        <script file="editors/scripts/subwindow_editor.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />

            <cycler_effect_subwindow>
                <anchored width="140" />
                <parameters>
                    <dynamicinitlist>spellEditors</dynamicinitlist>
                </parameters>
            </cycler_effect_subwindow>

            <subwindow_effect_editor />
        </sheetdata>
    </windowclass>
</root>
