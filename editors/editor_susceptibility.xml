<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="editor_susceptibility">
        <script file="editors/scripts/editor_susceptibility.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />

            <stringcycler_effect name="effect">
                <anchored width="140" />
                <parameters>
                    <defaultlabelres mergerule="replace">immune</defaultlabelres>
                    <defaultvalue>IMMUNE</defaultvalue>
                    <labelsres>resist|dr|vuln</labelsres>
                    <values>RESIST|DR|VULN</values>
                </parameters>
                <script>
                    function onValueChanged()
                        window.updateVisibility()
                        super.onValueChanged()
                    end
                </script>
            </stringcycler_effect>

            <effect_number name="effect_modifier" />

            <combobox_damage_types name="damage_type" />
        </sheetdata>
    </windowclass>
</root>
